<div class="flex justify-between mt-6">
  <% if previous_step_path %>
    <%= link_to "Back", previous_step_path, 
      class: "rounded-full px-6 py-3 bg-blue-600 text-white font-bold hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500", 
      role: "button" %>
  <% else %>
    <div></div>
  <% end %>

  <% if next_step_path %>
    <%= link_to "Next", next_step_path, 
      class: "rounded-full px-6 py-3 bg-blue-600 text-white font-bold hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500", 
      role: "button" %>
  <% elsif show_complete_button? %>
    <%= link_to "Complete Course", complete_course_path(@course),
      class: "rounded-full px-6 py-3 bg-green-600 text-white font-bold hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500",
      role: "button",
      data: { turbo: false } %>
  <% end %>
</div>
