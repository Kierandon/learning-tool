<div class="question-content relative">
  <% if @step.learning_objectives.any? %>
    <%= render CoreQuestionIconComponent.new %>
  <% end %>

  <p class="mb-4"><%= @step.content %></p>
  <%= form_with url: course_step_answers_path(@course, @step), local: true do |f| %>
    <% @step.questions.each do |question| %>
      <%= render Questions::QuestionContainerComponent.new(question: question, form: f, just_answered: @just_answered) %>
    <% end %>
    <div class="flex flex-col items-center">
      <% if !@step.all_questions_answered?(current_user) %>
        <%= f.submit "Check answer", class: "rounded-full px-6 py-3 bg-blue-600 text-white font-bold hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      <% end %>
    </div>
  <% end %>
</div>
