<div class="card-container p-6 bg-gray-100 rounded shadow">
  <div class="text-xl font-bold pb-6" data-test-id="courses-list-header">
    Available Courses
  </div>
  <div class="space-y-6">
    <% @courses&.each do |course| %>
      <div class="flex items-center bg-white shadow rounded p-4 gap-4">
        <div class="flex-shrink-0 w-24 h-24">
          <% if course.image_url.present? %>
            <img src="<%= course.image_url %>" alt="Course image" class="w-full h-full object-cover rounded">
          <% else %>
            <img src="https://placehold.co/600x400" alt="Placeholder image" class="w-full h-full object-cover rounded">
          <% end %>
        </div>
        
        <div class="flex-grow min-w-0">
          <h2 class="text-lg font-bold truncate w-full"><%= course.title %></h2>
          <p class="text-gray-600 line-clamp-3 break-words w-full"><%= course.description %></p>
        </div>

        <div class="flex-shrink-0">
          <%= 
            link_to course.progressions.exists?(user: current_user) ? "CONTINUE" : "START NOW",
            course_path(course),
            class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" 
          %>
        </div>
      </div>
    <% end %>
  </div>
</div>
