<div class="border rounded-lg overflow-hidden bg-gradient-to-r from-gray-50 to-blue-50 border-blue-200 hover:shadow-md transition-shadow">
  <div class="p-5">
    <div class="flex justify-between items-start">
      <h3 class="font-semibold text-lg text-gray-900 mb-2"><%= @standard.name %></h3>
      <span class="bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded-full font-medium"><%= @standard.code %></span>
    </div>
    
    <% if @standard.description.present? %>
      <div class="mt-2 text-sm text-gray-600">
        <%= @standard.description.to_plain_text.truncate(150) %>
      </div>
    <% end %>
    
    <div class="mt-3 text-sm text-gray-600">
      <span class="text-blue-600 font-medium"><%= courses_count %> <%= 'Course'.pluralize(courses_count) %></span>
    </div>
    
    <div class="mt-4 flex items-center justify-between">
      <%= link_to "View Courses", courses_standard_path(@standard), 
          class: "inline-flex items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
      
      <% if has_completed_courses? %>
        <span class="text-green-600 flex items-center text-sm">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          In progress
        </span>
      <% end %>
    </div>
  </div>
</div>
