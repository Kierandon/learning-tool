<div class="card-container p-6 bg-gray-100 rounded shadow max-w-md mx-auto">
  <h1 class="text-2xl font-bold text-center mb-4">Login</h1>

  <% if flash[:alert] %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
      <span class="block sm:inline"><%= flash[:alert] %></span>
    </div>
  <% end %>

  <%= form_with url: session_path, scope: :session, local: true, class: "space-y-4" do |form| %>
    <div>
      <%= form.label :login_hash, "Enter your code:", class: "block text-gray-700 font-medium" %>
      <%= form.text_field :login_hash, autofocus: true, class: "mt-1 block w-full p-2 border border-gray-300 rounded shadow-sm focus:ring-blue-500 focus:border-blue-500", id: "login_hash" %>
    </div>

    <div class="text-center">
      <%= form.submit "Login", class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 w-full" %>
    </div>
  <% end %>
</div>
